<div class="linkspage"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="tcaa.content">

        <tal:hasbackground tal:condition="context/backgroundImage">
        <img tal:define="scale context/@@images"
        tal:replace="structure python:scale.scale('backgroundImage', width=200, height=150, direction='down').tag()" />
        </tal:hasbackground>

        <div tal:content="structure context/content/output" />

        <div tal:condition="view/hasFeaturedPages">
            <div tal:repeat="page view/featuredPages">
                <a tal:attributes="href page/url; title page/description">
                    <img tal:replace="structure page/imageTag" />
                    <div tal:content="page/title" />
                </a>
            </div>
        </div>
        <div tal:condition="not: view/hasFeaturedPages">
            NO featured pages found
        </div>
</div>
