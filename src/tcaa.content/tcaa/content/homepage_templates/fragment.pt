<div class="homepage" 
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="tcaa.content"
      tal:attributes="style context/@@custom-page-style"
      >

    <div tal:content="structure context/content/output" />

    <div tal:condition="view/hasFeaturedPages">
        <div tal:repeat="page view/featuredPages">
            <a tal:attributes="href page/url; title page/description"><img tal:replace="structure page/imageTag" /><div tal:content="page/title" /></a>
        </div>
    </div>
    <div tal:condition="not: view/hasFeaturedPages">
        NO featured pages found
    </div>
</div>
